# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=casablanca_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# API Server Configuration
PORT=3000
NODE_ENV=production

# Google Sheets Configuration
GOOGLE_SHEETS_ID=your_google_sheets_id_here

# Option 1: Google Service Account (Recommended for Production)
# Create a service account at: https://console.cloud.google.com/iam-admin/serviceaccounts
# Download the JSON key file and paste its contents as a single line
GOOGLE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}'

# Option 2: Google OAuth2 (For Development)
GOOGLE_OAUTH_CLIENT_ID=your_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_client_secret_here
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/oauth/callback
GOOGLE_OAUTH_REFRESH_TOKEN=your_refresh_token_here

# Retell AI Configuration (Optional - for logging)
RETELL_API_KEY=your_retell_api_key_here

# Google Chat Webhook Configuration (for live call monitoring)
# Get this URL from Google Chat > Create Webhook in your space
GOOGLE_CHAT_WEBHOOK_URL=https://chat.googleapis.com/v1/spaces/YOUR_SPACE/messages?key=YOUR_KEY&token=YOUR_TOKEN

# Dashboard URL (for links in Google Chat cards)
DASHBOARD_URL=https://app.retellai.com

# API Security (Optional - recommended for production)
API_KEY=your_api_secret_key_for_authentication
ALLOWED_ORIGINS=https://api.retellai.com,https://your-domain.com

# Logging
LOG_LEVEL=info

# Mock Data Mode (for testing without database)
USE_MOCK_DATA=false
